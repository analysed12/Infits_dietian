<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddClients"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_arrow_back_black"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="25dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/fonts"
                    android:gravity="center_horizontal"
                    android:text="ADD CLIENT"
                    android:textColor="@color/black"
                    android:textSize="33sp" />

                <TextView
                    android:id="@+id/see_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/fonts"
                    android:text="See all"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="80dp">

                <ImageView
                    android:layout_width="145dp"
                    android:layout_height="145dp"
                    android:src="@drawable/profile_pic"
                    android:id="@+id/pic"/>

                <ImageView
                    android:layout_width="83dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/update_photo"
                    android:id="@+id/select_dp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10dp">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:padding="5dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:id="@+id/name_title"
                            style="@style/account_txt_views"
                            android:layout_width="100dp"
                            android:layout_height="42dp"
                            android:text="Name"/>
                        <EditText
                            android:id="@+id/name_edt"
                            style="@style/account_edt_views"
                            android:layout_width="200dp"
                            android:inputType="none"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:id="@+id/gender_title"
                            style="@style/account_txt_views"
                            android:layout_width="wrap_content"
                            android:layout_height="42dp"
                            android:text="Gender"
                            android:layout_gravity="center"/>
                        <RadioGroup
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_gravity="center">
                            <ImageView
                                android:id="@+id/gender_male_icon"
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:adjustViewBounds="true"
                                android:elevation="5dp"
                                android:layout_gravity="center"
                                android:scaleType="centerInside"
                                android:src="@drawable/gender_male_selected" />

                            <ImageView
                                android:id="@+id/gender_female_icon"
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:elevation="5dp"
                                android:src="@drawable/gender_female"
                                android:layout_marginLeft="5dp"/>
                        </RadioGroup>
                        <TextView
                            android:id="@+id/age_title"
                            style="@style/account_txt_views"
                            android:layout_width="wrap_content"
                            android:layout_height="42dp"
                            android:text="Age"
                            android:layout_marginStart="30dp"/>
                        <EditText
                            android:id="@+id/age_edt"
                            style="@style/account_edt_views"
                            android:layout_width="70dp"
                            android:layout_gravity="center"
                            android:inputType="number"
                            android:layout_marginStart="40dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:id="@+id/email_title"
                            style="@style/account_txt_views"
                            android:layout_width="wrap_content"
                            android:layout_height="42dp"
                            android:text="Height" />
                        <EditText
                            android:id="@+id/height_edt"
                            style="@style/account_edt_views"
                            android:layout_width="70dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="20dp"
                            android:inputType="number"/>
                        <TextView
                            android:id="@+id/phone_title"
                            style="@style/account_txt_views"
                            android:layout_width="wrap_content"
                            android:layout_height="42dp"
                            android:layout_marginStart="30dp"
                            android:text="Weight"/>
                        <EditText
                            android:id="@+id/weight_edt"
                            style="@style/account_edt_views"
                            android:inputType="number"
                            android:layout_gravity="center"
                            android:layout_width="70dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:id="@+id/about"
                            style="@style/account_txt_views"
                            android:layout_width="100dp"
                            android:layout_height="42dp"
                            android:text="About"/>
                        <EditText
                            android:id="@+id/about_edt"
                            style="@style/account_edt_views"
                            android:inputType="none"
                            android:layout_gravity="center"
                            android:layout_width="200dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:id="@+id/title"
                            style="@style/account_txt_views"
                            android:layout_width="100dp"
                            android:layout_height="42dp"
                            android:text="Title"/>
                        <EditText
                            android:id="@+id/title_edt"
                            style="@style/account_edt_views"
                            android:inputType="none"
                            android:layout_width="200dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:id="@+id/description_title"
                            style="@style/account_txt_views"
                            android:layout_width="100dp"
                            android:layout_height="42dp"
                            android:text="Description"/>

                        <EditText
                            android:id="@+id/description_edt"
                            style="@style/account_edt_views"
                            android:inputType="none"
                            android:layout_width="200dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:cardElevation="0dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/outline_for_cardview"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="PLANS"
                                android:textSize="28sp"
                                android:fontFamily="@font/fonts"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_marginStart="20dp"
                                android:layout_weight="1"/>
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="20dp"
                                android:src="@drawable/edit_icon"
                                android:layout_gravity="center"
                                android:layout_marginEnd="25dp"/>
                        </LinearLayout>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginTop="60dp"
                            android:layout_marginHorizontal="20dp"
                            app:cardElevation="0dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/outline_for_cardview"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Title"
                                    android:fontFamily="@font/fonts"
                                    android:textSize="20sp"
                                    android:layout_marginStart="15dp"/>
                                <EditText
                                    android:id="@+id/plan_title_edt"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginEnd="30dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="40dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Description"
                                    android:fontFamily="@font/fonts"
                                    android:textSize="20sp"
                                    android:layout_marginStart="15dp"/>
                                <EditText
                                    android:id="@+id/plan_describption_edt"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginEnd="30dp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>
                        <Button
                            android:id="@+id/addClient"
                            android:layout_width="117dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center_horizontal|bottom"
                            android:background="@drawable/edit_text_background"
                            android:backgroundTint="#FF565E"
                            android:fontFamily="@font/fonts"
                            android:text="Save"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
</LinearLayout>