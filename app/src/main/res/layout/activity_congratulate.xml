<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Congratulate"
    android:background="#4040F2">
    <ImageView
        android:layout_width="600dp"
        android:layout_height="120dp"
        android:src="@drawable/confiti"
        android:layout_gravity="top|center_horizontal"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/medal_con" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congratulations !! "
        android:textSize="48sp"
        android:fontFamily="@font/fonts"
        android:textColor="@color/white"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/dietitan_name_congratulate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John wayne"
        android:textSize="36sp"
        android:fontFamily="@font/fonts"
        android:textColor="@color/white"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have reached 100 clients"
        android:textSize="30sp"
        android:fontFamily="@font/fonts"
        android:textColor="@color/white"
        android:layout_gravity="center"/>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_gravity="bottom|center">
        <Button
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:text="Share"
            android:fontFamily="@font/fonts"
            android:textSize="30sp"
            android:backgroundTint="@color/white"
            android:textColor="#4040F2"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\@teaminfits"
        android:textSize="30sp"
        android:fontFamily="@font/fonts"
        android:textColor="@color/white"
        android:layout_gravity="bottom|center"/>

</LinearLayout>