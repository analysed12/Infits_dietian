<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/br_card"
        android:layout_width="330dp"
        android:layout_gravity="center"
        android:layout_height="70dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#D9E3FF">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/br_image"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/breakfast"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bread Truffle"
            android:id="@+id/br_food_name"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:layout_width="13.33dp"
            android:layout_height="13.33dp"
            android:layout_marginTop="43.33dp"
            android:layout_marginLeft="81.33dp"
            android:src="@drawable/clock2"/>
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="42dp"
            android:layout_marginLeft="177dp"
            android:src="@drawable/serving"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 min"
            android:id="@+id/br_time"
            android:layout_marginLeft="101dp"
            android:layout_marginTop="38dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 serving"
            android:id="@+id/br_serving"
            android:layout_marginLeft="198dp"
            android:layout_marginTop="38dp"/>
        <ImageButton
            android:id="@+id/br_next"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="end"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/imageviewcorner"
            android:src="@drawable/arrow_right"/>

    </androidx.cardview.widget.CardView>
</LinearLayout>