<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:backgroundTint="#EFF8FF">
    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_gravity="center"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#EFF8FF"
        android:layout_height="190dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/consultation_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo2"
                android:gravity="center"
                android:text="2022-06-17"
                android:textColor="@color/black" />
        <TextView
            android:id="@+id/consultation_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:layout_below="@id/consultation_date"
            android:fontFamily="@font/baloo2"
            android:text="05:00"
            android:textColor="@color/black" />
        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="50dp"
            android:id="@+id/pic"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/consultation_time"
            app:cardElevation="10dp">
            <ImageView
                android:id="@+id/consultation_profile_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/doctor_pic"
                android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/consultation_profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pic"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:text="Eden Simpson"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/fonts"/>

            <Button
                android:id="@+id/call"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:layout_below="@id/consultation_profile_name"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/joincall"
                android:gravity="center"
                android:text="Join the call"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:fontFamily="@font/baloo2"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>