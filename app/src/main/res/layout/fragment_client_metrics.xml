<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ClientMetrics">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:background="@drawable/outline"
                android:layout_gravity="center"
                android:elevation="10dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="10dp"
                android:layout_marginBottom="10dp">
                <RadioGroup
                    android:id="@+id/toggle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:checkedButton="@+id/active_btn"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/active_btn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/switch_on"
                        android:button="@null"
                        android:gravity="center"
                        android:text="Today"
                        android:textColor="@drawable/switch_text"
                        android:fontFamily="@font/fonts" />

                    <RadioButton
                        android:id="@+id/yesterday_btn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/switch_on"
                        android:button="@null"
                        android:gravity="center"
                        android:text="Yesterday"
                        android:textColor="@drawable/switch_text"
                        android:fontFamily="@font/fonts"/>
                    <RadioButton
                        android:id="@+id/date_picker_btn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/switch_on"
                        android:button="@null"
                        android:gravity="center"
                        android:text="Custom date"
                        android:textColor="@drawable/switch_text"
                        android:fontFamily="@font/fonts"/>
                </RadioGroup>
            </androidx.cardview.widget.CardView>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <TableRow>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:src="@drawable/metrics_steps"/>
                        <TextView
                            android:id="@+id/steps"
                            android:layout_width="wrap_content"
                            android:layout_height="19dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="61dp"
                            android:text="500 Steps"
                            android:textSize="14dp"
                            android:textColor="@color/white"
                            android:gravity="top"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:src="@drawable/metrics_heart_rate"/>
                        <TextView
                            android:id="@+id/bpm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:textSize="14dp"
                            android:textColor="#ffffff"
                            android:layout_marginTop="62dp"
                            android:gravity="top"
                            android:text="85 BPM" />

                        <TextView
                            android:id="@+id/bpmUp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="95dp"
                            android:layout_marginTop="52dp"
                            android:gravity="top"
                            android:text="120 bpm"
                            android:textSize="12dp"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/bpmDown"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="95dp"
                            android:layout_marginTop="71dp"
                            android:textSize="12dp"
                            android:textColor="@color/white"
                            android:gravity="top"
                            android:text="72 bpm" />

                    </androidx.cardview.widget.CardView>
                </TableRow>
                <TableRow>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/metrics_water"/>
                        <TextView
                            android:id="@+id/glasses"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="11dp"
                            android:layout_marginTop="61dp"
                            android:gravity="top"
                            android:text="4 Glasses"
                            android:textAppearance="@style/glasses" />

                        <TextView
                            android:id="@+id/watergoal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="11dp"
                            android:layout_marginTop="93dp"
                            android:gravity="top"
                            android:text="Goal"
                            android:textAppearance="@style/goal" />

                        <TextView
                            android:id="@+id/glassesGoal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginRight="50dp"
                            android:layout_marginTop="93dp"
                            android:gravity="top"
                            android:text="8 Glasses"
                            android:textAppearance="@style/goal" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/metrics_sleep"/>
                        <TextView
                            android:id="@+id/sleep"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="41dp"
                            android:layout_marginTop="61dp"
                            android:gravity="top"
                            android:text="7hr_35_mins"
                            android:textAppearance="@style/glasses" />

                        <TextView
                            android:id="@+id/sleepgoal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="41dp"
                            android:layout_marginTop="93dp"
                            android:gravity="top"
                            android:text="Goal"
                            android:textAppearance="@style/goal" />

                        <TextView
                            android:id="@+id/Goalsleep"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="93dp"
                            android:gravity="top"
                            android:text="8 Hours"
                            android:textAppearance="@style/goal" />
                    </androidx.cardview.widget.CardView>
                </TableRow>
                <TableRow>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/metrics_weight"/>
                        <TextView
                            android:id="@+id/weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="41dp"
                            android:layout_marginTop="61dp"
                            android:text="80 Kilograms"
                            android:textAppearance="@style/glasses"
                            android:gravity="top"
                            />

                        <TextView
                            android:id="@+id/weightGoal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="41dp"
                            android:layout_marginTop="93dp"
                            android:gravity="top"
                            android:text="Goal"
                            android:textAppearance="@style/goal" />

                        <TextView
                            android:id="@+id/GoalWeight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="93dp"
                            android:gravity="top"
                            android:text="60 KG"
                            android:textAppearance="@style/goal" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/metrics_calories"/>
                        <TextView
                            android:id="@+id/calorie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="41dp"
                            android:layout_marginTop="61dp"
                            android:gravity="top"
                            android:text="1000 kCal"
                            android:textAppearance="@style/glasses" />

                        <TextView
                            android:id="@+id/calorieGoal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="41dp"
                            android:layout_marginTop="93dp"
                            android:gravity="top"
                            android:text="Limit"
                            android:textAppearance="@style/goal" />

                        <TextView
                            android:id="@+id/GoalCalorie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="93dp"
                            android:gravity="top"
                            android:text="2000 kCal"
                            android:textAppearance="@style/goal" />

                    </androidx.cardview.widget.CardView>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>