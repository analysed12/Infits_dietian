<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LiveList"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Now Streaming Live"
                android:background="#13131A"
                android:textColor="@color/white"
                android:textSize="28dp"
                android:paddingStart="10dp"
                android:fontFamily="@font/fonts"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/streaming_live"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#13131A"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upcoming Live"
                android:textSize="28dp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/fonts"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/upcoming_live"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Live history"
                android:textSize="28dp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/fonts"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/live_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>