<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".achievement_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:elevation="5dp"
                android:layout_margin="1dp"
                app:cardCornerRadius="20dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/medal_con"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Reach 10 clients"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/baloo2"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/achievementbartext1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="3/10"
                    android:layout_marginLeft="330dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/baloo2"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
                <ProgressBar
                    android:id="@+id/achievementbar1"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="60dp"
                    android:progressTint="@color/blue"
                    android:progress="30"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:elevation="5dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="1dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/medal_con"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Reach 25 clients"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/baloo2"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/achievementbartext2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="3/25"
                    android:layout_marginLeft="330dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/baloo2"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
                <ProgressBar
                    android:id="@+id/achievementbar2"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="60dp"
                    android:progressTint="@color/blue"
                    android:progress="20"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:elevation="5dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="1dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/medal_con"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Reach 50 clients"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/baloo2"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/achievementbartext3"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="3/50"
                    android:layout_marginLeft="330dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/baloo2"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
                <ProgressBar
                    android:id="@+id/achievementbar3"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="60dp"
                    android:progressTint="@color/blue"
                    android:progress="10"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:elevation="5dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="1dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/medal_con"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Reach 75 clients"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/baloo2"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/achievementbartext4"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="3/75"
                    android:layout_marginLeft="330dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/baloo2"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
                <ProgressBar
                    android:id="@+id/achievementbar4"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="60dp"
                    android:progressTint="@color/blue"
                    android:progress="5"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:elevation="5dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="1dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/medal_con"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Reach 100 clients"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/baloo2"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/achievementbartext5"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="3/100"
                    android:layout_marginLeft="310dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/baloo2"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
                <ProgressBar
                    android:id="@+id/achievementbar5"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="60dp"
                    android:progressTint="@color/blue"
                    android:progress="2"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

                <ImageView
                    android:id="@+id/imageviewachievement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/diet_chart_next"
                    android:layout_marginLeft="370dp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>