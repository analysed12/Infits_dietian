<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/fonts"
        android:gravity="center_horizontal"
        android:text="ACCOUNT"
        android:textColor="@color/black"
        android:textSize="33sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="80dp">

        <ImageView
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:src="@drawable/profile_pic"
            android:id="@+id/dp"/>

        <ImageView
            android:layout_width="83dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/update_photo"
            android:id="@+id/select_dp"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp">

        <TextView
            android:id="@+id/name_title"
            style="@style/account_txt_views"
            android:layout_width="100dp"
            android:layout_height="42dp"
            android:text="     Name"
            android:drawableLeft="@drawable/ic_baseline_person_24"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_edit_24"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="25dp"
                android:id="@+id/name_edt_button"/>
        </LinearLayout>
        <EditText
            android:id="@+id/name_edt"
            android:layout_gravity="center"
            style="@style/account_edt_views"
            android:layout_width="250dp"
            android:cursorVisible="false"
            android:focusableInTouchMode="false"
            android:inputType="none"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp">
        <TextView
            android:id="@+id/gender_title"
            style="@style/account_txt_views"
            android:layout_width="80dp"
            android:layout_height="42dp"
            android:text="Gender" />
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp">

                <ImageView
                    android:id="@+id/gender_male_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:adjustViewBounds="true"
                    android:elevation="5dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/gender_male_selected"/>

                <ImageView
                    android:id="@+id/gender_female_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:elevation="5dp"
                    android:src="@drawable/gender_female"
                    android:layout_marginLeft="5dp"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp">
            <TextView
                android:id="@+id/age_title"
                style="@style/account_txt_views"
                android:layout_width="80dp"
                android:layout_height="42dp"
                android:text="    Age"
                android:drawableLeft="@drawable/ic_baseline_autorenew_24"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_edit_24"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="25dp"
                android:id="@+id/age_edt_button"/>
        </LinearLayout>
        <EditText
            android:id="@+id/age_edt"
            style="@style/account_edt_views"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:cursorVisible="false"
            android:focusableInTouchMode="false"
            android:inputType="none"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp">
        <TextView
            android:id="@+id/email_title"
            style="@style/account_txt_views"
            android:layout_width="100dp"
            android:layout_height="42dp"
            android:text="    Email"
            android:drawableLeft="@drawable/ic_baseline_email_24"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_edit_24"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="25dp"
                android:id="@+id/email_edt_button"/>
        </LinearLayout>

        <EditText
            android:id="@+id/email_edt"
            style="@style/account_edt_views"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:cursorVisible="false"
            android:focusableInTouchMode="false"
            android:inputType="none"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp">
        <TextView
            android:id="@+id/phone_title"
            style="@style/account_txt_views"
            android:layout_width="140dp"
            android:layout_height="42dp"
            android:text="    Phone No."
            android:drawableLeft="@drawable/ic_baseline_local_phone_24" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_edit_24"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="25dp"
                android:id="@+id/phone_edt_button"/>
        </LinearLayout>

        <EditText
            android:id="@+id/phone_edt"
            style="@style/account_edt_views"
            android:cursorVisible="false"
            android:focusableInTouchMode="false"
            android:inputType="none"
            android:layout_width="250dp"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp">
            <TextView
                android:id="@+id/location_title"
                style="@style/account_txt_views"
                android:layout_width="140dp"
                android:layout_height="42dp"
                android:text="    Location"
                android:drawableLeft="@drawable/ic_baseline_location_on_24" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_edit_24"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="25dp"
                android:id="@+id/location_edt_button"/>
        </LinearLayout>

        <EditText
            android:id="@+id/location_edt"
            style="@style/account_edt_views"
            android:cursorVisible="false"
            android:focusableInTouchMode="false"
            android:inputType="none"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp">
            <TextView
                android:id="@+id/experience_title"
                style="@style/account_txt_views"
                android:layout_width="160dp"
                android:layout_height="42dp"
                android:text="    Experience"
                android:drawableLeft="@drawable/ic_baseline_access_time_24" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_edit_24"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="25dp"
                android:id="@+id/experience_edt_button"/>
        </LinearLayout>

        <EditText
            android:id="@+id/experience_edt"
            style="@style/account_edt_views"
            android:cursorVisible="false"
            android:focusableInTouchMode="false"
            android:inputType="numberDecimal"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp">
            <TextView
                android:id="@+id/about_me_title"
                style="@style/account_txt_views"
                android:layout_width="140dp"
                android:layout_height="42dp"
                android:text="    About me"
                android:drawableLeft="@drawable/ic_baseline_local_phone_24" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_edit_24"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="25dp"
                android:id="@+id/about_me_edt_button"/>
        </LinearLayout>

        <EditText
            android:id="@+id/about_me_edt"
            style="@style/account_edt_views"
            android:cursorVisible="false"
            android:focusableInTouchMode="false"
            android:inputType="none"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp">

        <Button
            android:id="@+id/button_logout"
            android:layout_width="117dp"
            android:layout_height="42dp"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/edit_text_background"
            android:backgroundTint="#FF565E"
            android:fontFamily="@font/fonts"
            android:text="LOGOUT"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"/>
            <Button
                android:id="@+id/button_save"
                android:layout_width="117dp"
                android:layout_height="42dp"
                android:layout_gravity="center_horizontal|bottom"
                android:background="@drawable/edit_text_background"
                android:backgroundTint="#FF565E"
                android:fontFamily="@font/fonts"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </LinearLayout>
    </ScrollView>
    </LinearLayout>
    </LinearLayout>
</FrameLayout>