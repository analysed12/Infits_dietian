<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:layout_margin="10dp"
    android:id="@+id/itemView">

    <TextView
        android:id="@+id/dietitian_msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/fonts"
        android:text="14:00"
        android:textSize="10sp"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/attachmentD"
            android:layout_width="255dp"
            android:layout_height="192dp"
            android:visibility="gone"
            android:src="@drawable/meal_tracker_icon"/>

    <TextView
        android:id="@+id/dietitian_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:background="@drawable/edit_text_background"
        android:backgroundTint="#EBD7FF"
        android:fontFamily="@font/fonts"
        android:lineHeight="16sp"
        android:paddingHorizontal="21dp"
        android:paddingVertical="9dp"
        android:text="Loremipsum"
        android:textColor="#535353"
        android:textSize="10sp"
        android:gravity="end"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/filesD"
        android:layout_width="200dp"
        android:visibility="gone"
        android:translationZ="1dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/outline">
        <ImageView
            android:id="@+id/typeD"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/pdf_icon"
            android:layout_marginStart="14dp"/>
    <TextView
        android:id="@+id/filenameD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/fonts"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:layout_marginHorizontal="10dp"
        android:text="name" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBoxD"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:visibility="visible"
        android:padding="12dp"/>
</LinearLayout>