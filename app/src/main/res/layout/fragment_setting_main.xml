<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SettingMain">

    <TextView
        android:id="@+id/settings"
        android:layout_width="138dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:text="Setting"
        android:textSize="38sp"
        android:fontFamily="@font/fonts"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:gravity="center_vertical"
        />
    <TextView
        android:id="@+id/account"
        android:layout_width="84dp"
        android:layout_height="51dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/fonts"
        android:text="Account"
        android:textSize="24sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:gravity="center_vertical"
        />
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:layout_marginTop="125dp"
           app:cardBackgroundColor="@color/white"
           app:cardElevation="0dp"
           android:id="@+id/dieitician_gotoAccount">
           <androidx.cardview.widget.CardView
               android:layout_width="60dp"
               android:layout_height="60dp"
               android:layout_alignParentStart="true"
               android:layout_marginStart="25dp"
               android:layout_alignParentTop="true"
               app:cardCornerRadius="250dp"
               android:layout_gravity="center_vertical">
               <ImageView
                   android:id="@+id/settings_dietician_profile_icon"
                   android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:layout_alignParentStart="true"
                   android:layout_alignParentTop="true"
                   android:src="@drawable/profile_pic"
                   />
           </androidx.cardview.widget.CardView>

           <TextView
               android:id="@+id/settings_dietician_name"
               android:layout_width="140dp"
               android:layout_height="46dp"
               android:layout_alignParentStart="true"
               android:layout_alignParentTop="true"
               android:layout_marginStart="94dp"
               android:fontFamily="@font/fonts"
               android:gravity="center_vertical"
               android:text="John Wayne"
               android:textColor="@color/black"
               android:textSize="22sp" />

           <TextView
               android:layout_width="100dp"
               android:layout_height="34dp"
               android:textSize="16sp"
               android:layout_alignParentStart="true"
               android:layout_marginStart="94dp"
               android:layout_alignParentTop="true"
               android:gravity="center_vertical"
               android:fontFamily="@font/fonts"
               android:layout_marginTop="30dp"
               android:text="Personal Info" />

           <ImageView
               android:layout_width="7dp"
               android:layout_height="12dp"
               android:layout_alignParentStart="true"
               android:layout_marginEnd="30dp"
               android:layout_gravity="end|center_vertical"
               android:layout_alignParentTop="true"
               android:src="@drawable/arrow_right" />
       </androidx.cardview.widget.CardView>
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="30dp"
          android:src="@drawable/horizontal_line"/>
       <androidx.cardview.widget.CardView
           android:id="@+id/dieitician_achievements_settings_view"
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:layout_marginTop="30dp"
           app:cardBackgroundColor="@color/white"
           app:cardElevation="0dp">
           <androidx.cardview.widget.CardView
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:layout_alignParentStart="true"
               android:layout_marginStart="25dp"
               android:layout_alignParentTop="true"
               app:cardCornerRadius="250dp"
               android:layout_gravity="center_vertical"
               >
               <ImageView
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:layout_alignParentStart="true"
                   android:layout_alignParentTop="true"
                   android:src="@drawable/achivements"
                   />
           </androidx.cardview.widget.CardView>
           <TextView
               android:layout_width="180dp"
               android:layout_height="46dp"
               android:text="My Achievements"
               style="@style/setting_option" />

           <ImageView
               android:layout_width="7dp"
               android:layout_height="12dp"
               android:layout_alignParentTop="true"
               android:layout_gravity="end|center_vertical"
               android:layout_marginEnd="30dp"
               android:src="@drawable/arrow_right" />
       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:id="@+id/notification"
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:layout_marginTop="10dp"
           app:cardBackgroundColor="@color/white"
           app:cardElevation="0dp">
           <androidx.cardview.widget.CardView
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:layout_alignParentStart="true"
               android:layout_marginStart="25dp"
               android:layout_alignParentTop="true"
               app:cardCornerRadius="250dp"
               android:layout_gravity="center_vertical"
               >
               <ImageView
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:layout_alignParentStart="true"
                   android:layout_alignParentTop="true"
                   android:src="@drawable/notifications"
                   />
           </androidx.cardview.widget.CardView>
           <TextView
               android:layout_width="180dp"
               android:layout_height="46dp"
               style="@style/setting_option"
               android:text="Notifications"/>

           <ImageView
               android:id="@+id/dietician_notifications_view"
               android:layout_width="7dp"
               android:layout_height="12dp"
               android:layout_alignParentTop="true"
               android:layout_gravity="end|center_vertical"
               android:layout_marginEnd="30dp"
               android:src="@drawable/arrow_right" />
       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:id="@+id/resetpassword"
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:layout_marginTop="10dp"
           app:cardBackgroundColor="@color/white"
           app:cardElevation="0dp">
           <androidx.cardview.widget.CardView
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:layout_alignParentStart="true"
               android:layout_marginStart="25dp"
               android:layout_alignParentTop="true"
               app:cardCornerRadius="250dp"
               android:layout_gravity="center_vertical"
               >
               <ImageView
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:layout_alignParentStart="true"
                   android:layout_alignParentTop="true"
                   android:src="@drawable/password_lock_icon"
                   />
           </androidx.cardview.widget.CardView>
           <TextView
               android:layout_width="180dp"
               android:layout_height="46dp"
               style="@style/setting_option"
               android:text="Reset password"/>

           <ImageView
               android:id="@+id/dietician_resetpassword_view"
               android:layout_width="7dp"
               android:layout_height="12dp"
               android:layout_alignParentTop="true"
               android:layout_gravity="end|center_vertical"
               android:layout_marginEnd="30dp"
               android:src="@drawable/arrow_right" />
       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:layout_marginTop="10dp"
           app:cardBackgroundColor="@color/white"
           app:cardElevation="0dp">
           <androidx.cardview.widget.CardView
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:layout_alignParentStart="true"
               android:layout_marginStart="25dp"
               android:layout_alignParentTop="true"
               app:cardCornerRadius="250dp"
               android:layout_gravity="center_vertical"
               >
               <ImageView
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:layout_alignParentStart="true"
                   android:layout_alignParentTop="true"
                   android:src="@drawable/about_us"
                   />
           </androidx.cardview.widget.CardView>
           <TextView
               android:layout_width="180dp"
               android:layout_height="46dp"
               style="@style/setting_option"
               android:text="About Us"/>

           <ImageView
               android:id="@+id/dietician_about_us_view"
               android:layout_width="7dp"
               android:layout_height="12dp"
               android:layout_alignParentTop="true"
               android:layout_gravity="end|center_vertical"
               android:layout_marginEnd="30dp"
               android:src="@drawable/arrow_right" />
       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:layout_marginTop="10dp"
           app:cardBackgroundColor="@color/white"
           app:cardElevation="0dp">
           <androidx.cardview.widget.CardView
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:layout_alignParentStart="true"
               android:layout_marginStart="25dp"
               android:layout_alignParentTop="true"
               app:cardCornerRadius="250dp"
               android:layout_gravity="center_vertical"
               >
               <ImageView
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:layout_alignParentStart="true"
                   android:layout_alignParentTop="true"
                   android:src="@drawable/help"
                   />
           </androidx.cardview.widget.CardView>
           <TextView
               android:layout_width="180dp"
               android:layout_height="46dp"
               style="@style/setting_option"
               android:text="Help"/>

           <ImageView
               android:id="@+id/dietician_help_view"
               android:layout_width="7dp"
               android:layout_height="12dp"
               android:layout_alignParentTop="true"
               android:layout_gravity="end|center_vertical"
               android:layout_marginEnd="30dp"
               android:src="@drawable/arrow_right" />
       </androidx.cardview.widget.CardView>
   </LinearLayout>
</FrameLayout>