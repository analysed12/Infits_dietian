<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_marginTop="10dp"
        android:layout_height="120dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="9dp"
            android:layout_height="78dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="333dp"
            android:layout_marginBottom="19dp"
            android:background="@color/blue" />


        <androidx.cardview.widget.CardView
            android:layout_width="89dp"
            android:layout_height="89dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="39dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="222dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="250dp">

            <ImageView
                android:id="@+id/accept_reject_profile_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/doctor_blue_border" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/accept_reject_profile_name"
            android:layout_width="97dp"
            android:layout_height="21dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="142dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="121dp"
            android:layout_marginBottom="62dp"
            android:fontFamily="@font/fonts"
            android:text="John Kowalsky"
            android:textColor="#000000"
            android:textFontWeight="400"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/accept_reject_plan_type"
            android:layout_width="106dp"
            android:layout_height="18dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="142dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="112dp"
            android:layout_marginBottom="38dp"
            android:fontFamily="@font/fonts"
            android:text="Diet plan"
            android:textColor="#707070"
            android:textSize="12sp" />

        <Button
            android:id="@+id/request_accept"
            android:layout_width="84dp"
            android:layout_height="31dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="241dp"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="47dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/baloo2"
            android:onClick="return_message_area"
            android:text="Accept"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />


    </RelativeLayout>
</LinearLayout>