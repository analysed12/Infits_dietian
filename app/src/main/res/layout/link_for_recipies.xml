<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="220dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Video Link"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/fonts"
        android:textColor="#9873FF"
        android:layout_gravity="center"/>
   <EditText
       android:id="@+id/link_for_recipies"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:background="@drawable/link_for_recipes_outline"
       android:layout_gravity="center"
       android:hint="Paste URL"
       android:inputType="textUri"
       android:layout_marginTop="10dp"
       android:fontFamily="@font/fonts"
       android:layout_marginHorizontal="25dp"
       android:paddingHorizontal="20dp"
       android:textColor="#6A6A6A"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="25dp"
        android:gravity="center">
        
        <TextView
            android:id="@+id/cancel"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Cancel"
            android:textSize="20sp"
            android:fontFamily="@font/fonts"
            android:gravity="center"
            android:layout_marginEnd="15dp"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/upload_link"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/upload_button"
            android:layout_gravity="center"/>
    </LinearLayout>
    
</LinearLayout>