<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_centerHorizontal="true"
        android:layout_width="360dp"
        android:layout_height="160dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/doctor_pic"
                    app:cardCornerRadius="25dp"
                    android:layout_marginBottom="14dp">

                    <ImageView
                        android:id="@+id/client_list_profile_pic"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:scaleType="fitXY"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/client_list_profile_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:text="Ronald Richards"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="47.25pt"
                    android:layout_height="13.950000000000001pt"
                    android:text="Profile"
                    android:fontFamily="@font/fonts"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    android:background="@drawable/profile_btn_background"
                    android:backgroundTint="#FFA381"
                    android:layout_marginEnd="15dp"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/client_title_txt_list"
                    android:layout_marginStart="11dp"
                    android:text="Plan"
                    android:layout_alignParentStart="true"/>

                <TextView
                    style="@style/client_title_txt_list"
                    android:text="Start Date"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    style="@style/client_title_txt_list"
                    android:text="End Date"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/client_list_plan_name"
                    style="@style/client_details_txt_list"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="11dp"
                    android:background="@drawable/plan_outline" />

                <TextView
                    android:id="@+id/client_list_startdate"
                    style="@style/client_details_txt_list"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/plan_outline" />

                <TextView
                    android:id="@+id/client_list_enddate"
                    style="@style/client_details_txt_list"
                    android:background="@drawable/plan_outline"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>