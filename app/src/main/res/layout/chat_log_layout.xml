<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/chat_log_view">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/chat_log_profile_pic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            app:srcCompat="@drawable/doctor" />

        <TextView
            android:id="@+id/chat_log_client_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/fonts"
            android:text="Ronald Richards" />

        <TextView
            android:id="@+id/chat_log_msg"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/fonts"
            android:text="Lorem ipsum dolor sit amet, consecteturelit" />

        <TextView
            android:id="@+id/chat_log_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="17dp"
            android:text="13:00" />

            <TextView
                android:id="@+id/unread"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:background="@drawable/unread_background"
                android:fontFamily="@font/fonts"
                android:text="5"
                android:textSize="8sp"
                android:gravity="center|bottom"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/chat_log_msg"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="-40dp"
                android:visibility="visible"/>

    </RelativeLayout>

</LinearLayout>